@page
@model CinemaProject.Pages.Directors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Director</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Director.Firstname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Director.Firstname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Director.Lastname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Director.Lastname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Director.Birthday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Director.Birthday)
        </dd>
        <dt class="col-sm-2">Awards</dt>
        <dd class="col-sm-10">
            @if (Model.Director.Directorawards.Count() != 0)
                @foreach (var director in Model.Director.Directorawards)
                {
                    <a asp-page="../Awards/Details" asp-route-id="@director.AwardAwardId" class="card-link">@Html.DisplayFor(model => model.Director.Directorawards)</a>
                }
                else
                {<p>0</p>}
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Director.Nationality)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Director.Nationality)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Director.DirectorId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
