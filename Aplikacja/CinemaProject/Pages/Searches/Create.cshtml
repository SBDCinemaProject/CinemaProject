@page
@model CinemaProject.Pages.Searches.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Search</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Search.SearchId" class="control-label"></label>
                <input asp-for="Search.SearchId" class="form-control" />
                <span asp-validation-for="Search.SearchId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Search.Content" class="control-label"></label>
                <input asp-for="Search.Content" class="form-control" />
