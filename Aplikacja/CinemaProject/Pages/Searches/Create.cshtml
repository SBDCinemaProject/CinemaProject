            </div>
            <div class="form-group">
                <label asp-for="Search.UserUserId" class="control-label"></label>
                <select asp-for="Search.UserUserId" class ="form-control" asp-items="ViewBag.UserUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Search.Category" class="control-label"></label>
                <input asp-for="Search.Category" class="form-control" />
                <span asp-validation-for="Search.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
