@page
@model CinemaProject.Pages.Actors.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Actor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Actor.ActorId" />
            <div class="form-group">
                <label asp-for="Actor.Firstname" class="control-label"></label>
                <input asp-for="Actor.Firstname" class="form-control" />
                <span asp-validation-for="Actor.Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Actor.Lastname" class="control-label"></label>
                <input asp-for="Actor.Lastname" class="form-control" />
                <span asp-validation-for="Actor.Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Actor.Birthday" class="control-label"></label>
                <input asp-for="Actor.Birthday" class="form-control" />
                <span asp-validation-for="Actor.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Actor.Nationality" class="control-label"></label>
                <input asp-for="Actor.Nationality" class="form-control" />
                <span asp-validation-for="Actor.Nationality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
