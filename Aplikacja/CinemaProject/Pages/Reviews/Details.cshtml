@page
@model CinemaProject.Pages.Reviews.DetailsModel

@{
    ViewData["Title"] = "Details";
}
@using System.Security.Claims
<h1>Details</h1>

<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Creationdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Creationdate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.MovieMovie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.MovieMovie.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.UserUser.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.UserUser.Username)
        </dd>
    </dl>
</div>
@if (User.Identity.IsAuthenticated && User.FindFirst(ClaimTypes.NameIdentifier).Value == Model.Review.UserUserId.ToString())
{
    <div class="m-2">
        <a asp-page="./Edit" asp-route-id="@Model.Review.ReviewId">Edit</a> |
        <a asp-page="../Index">Back to List</a>
    </div>
    <div>
        <a class="btn btn-danger" asp-page="./Delete" asp-route-userId="@Model.Review.UserUserId" asp-route-movieId="@Model.Review.MovieMovieId">Delete</a>
    </div>
}
else
{
    <div class="m-2">
        <a asp-page="../Index">Back to List</a>
    </div>
}

